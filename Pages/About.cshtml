@page
@model AspDotNetDemo.Pages.AboutModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration config 

<h1>@Model.GetTitle()</h1>

<table class=" table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Auther</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var book in Model.GetBooks())
            {
                 <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Auther</td>
                    <td>@book.Price</td>
                </tr>
            }
          }
    </tbody>
</table> 